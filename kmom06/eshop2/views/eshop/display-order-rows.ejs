<%- include("../partials/header.ejs") %>

<h2><%= message %></h2>

<table>
    <tr>
        <th>Details</th>
        <th>ID</th>
        <th>Customer Name</th>
        <th>Customer id</th>
        <th>Product Name</th>
        <th>Total Price</th>
        <th>Quantity rows</th>
        <th>Date</th>
        <th>status</th>
    </tr>
    <% for (const data of orderData) { %>
        <tr>
            <td><a href="/order-rows/<%= data.order_id %>">Display order's rows</a></td>
            <td><%= data.order_id %></td>
            <td><%= data.costumer_name %></td>
            <td><%= data.costumer_id %></td>
            <td><%= data.product_names %></td>
            <td><%= data.total_price %></td>
            <td><%= data.total_items %></td>
            <td><%= data.creation_date %></td>
            <td><%= data.order_status %></td>
        </tr>
    <% } %>
</table>
<a href="/customer" class="btn btn-success"><button type="submit">Create another order</button></a>

