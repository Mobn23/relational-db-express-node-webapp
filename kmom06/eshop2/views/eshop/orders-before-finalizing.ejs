<%- include("../partials/header.ejs") %>

<table>
    <tr>
        <th>ID</th>
        <th>Customer Name</th>
        <th>Customer id</th>
        <th>Quantity ordered</th>
        <th>Date</th>
        <th>status</th>
        <th>Product name</th>
        <th>product price</th>
    </tr>
    <% for (const data of orderData) { %>
        <tr>
            <td><%= data.order_id %></td>
            <td><%= data.costumer_name %></td>
            <td><%= data.costumer_id %></td>
            <td><%= data.quantity %></td>
            <td><%= data.creation_date %></td>
            <td><%= data.order_status %></td>
            <td><%= data.product_name %></td>
            <td><%= data.product_price %></td>
            <% if (data.order_status === "Skapad") { %>
                <td>
                    <a href="/finalize-creating-order/<%= data.order_id %>">Finalize Order</a>
                </td>
                <td>
                    <a href="/initiate-creating-order/<%= data.costumer_id %>/<%= data.costumer_name %>">Add more products</a>
                </td>
            <% } else { %>
                <td>Finalized</td>
            <% } %>
        </tr>
    <% } %>
</table>

<%- include("../partials/footer.ejs") %>
